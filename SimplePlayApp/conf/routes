# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.LoginController.index
GET     /index                           controllers.LoginController.index

GET /login controllers.LoginController.login()

POST /login controllers.LoginController.loginToIndex()

POST /logout controllers.LoginController.logout()

GET /users  controllers.UsersController.getUsers()

POST /users/delete/:id controllers.UsersController.deleteUser(id: Int)

POST /users/add controllers.UsersController.addUser()

GET /users/:id/autos controllers.AutoController.showUserAuto(id: Int)

POST /users/:id/autos controllers.AutoController.addAuto(id: Int)

POST /users/:userId/autos/delete/:autoId controllers.AutoController.deleteAuto(userId: Int, autoId: Int)

GET /autos controllers.AutoController.showAllAuto()
# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.at(path="/public", file)

    